{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.4.2",

    "wpackagist-plugin/adrotate": "3.12.1",
    "wpackagist-plugin/custom-post-type-ui": "1.1.2",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "4.8.2",
    "wpackagist-plugin/wpmandrill": "1.33",
    "wpackagist-plugin/featured-video-plus": "2.2.1",
    "wpackagist-plugin/disable-emojis": "1.5",
    "wpackagist-plugin/feed-them-social": "1.9.5",
    "wpackagist-plugin/issuupress": "1.3.2",
    "wpackagist-plugin/mailchimp-for-wp": "3.1.5",
    "wpackagist-plugin/sendgrid-email-delivery-simplified": "1.8.1",
    "wpackagist-plugin/wd-instagram-feed": "1.0.1"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
