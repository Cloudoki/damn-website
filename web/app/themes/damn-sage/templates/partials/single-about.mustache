<div class="container">
	<div class="row">
		
		<div class="col-sm-6 col-lg-4 col-lg-offset-2">
			
			<h4>External sources</h4>
			<ul class='external_links'>
				{{#external_links}}
				<li><a href="{{url}}">{{url}}</a></li>
				{{/external_links}}
			</ul>
			
			<h4>More About</h4>
			
			<ul class='keywords'>
				
				{{#categories}}
				<li><a href="/category/{{slug}}">{{name}}</a></li>
				{{/categories}}
				
				{{#tags}}
				<li><a href="/tag/{{slug}}">{{name}}</a></li>
				{{/tags}}
				
			</ul>
			
		</div>
		
		<div class="col-sm-6 col-lg-4 author">
			
			<a href="{{author.url}}" class='profile'>View Profile</a>
			
			{{#author.avatar}}
				<div class='avatar'>
					<img src="{{url}}" />
				</div>
			{{/author.avatar}}
			
			<h4>{{author.display_name}}</h4>
			
			{{{author.description}}}
		</div>
	</div>
</div>
