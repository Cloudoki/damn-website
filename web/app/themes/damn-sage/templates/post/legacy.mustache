{{> /partials/header-single}}

<article class="long-read">
		
	<div class="container post-content">
		
		<div class="row">
			<div class="col-md-8 col-lg-9">
				
				{{#has_video}} {{{video}}} {{/has_video}}
				{{^has_video}} {{> /partials/image-captioned}} {{/has_video}}
				
				<br><br>
				<h1>{{{post.post_title}}}</h1>
				<h2>{{#get_field}}sub-title{{/get_field}}</h2>
				
				<date>{{date}}</date>
				
			</div>
			
			<div class="col-md-4 col-lg-3">
			
				{{> /partials/ad-single}}
			
			</div>
		</div>	
		
		{{#issuu_shortcode}}
		<div class="row">
			<div class="col-md-8 col-lg-12">
			{{{issuu_shortcode}}}
			</div>
		</div>
		{{/issuu_shortcode	}}
		
		<div class="row">
			<div class="col-md-12 paragraph">
				{{#iterate}}
					{{{paragraphs.#}}}
				{{/iterate}}
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-12 paragraph">
				{{#iterate}}
					{{{paragraphs.#}}}
				{{/iterate}}
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-6">
				{{> /partials/image-captioned}}
			</div>
			
			<div class="col-md-6">
				{{> /partials/image-captioned}}
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-12 paragraph">
				{{#iterate}}
					{{{paragraphs.#}}}
				{{/iterate}}
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-6">
				{{#spill}}
					<div class="row">
						<div class="paragraph">
							{{{paragraphs}}}
						</div>
					</div>
				{{/spill}}
			</div>
			
			<div class="col-md-6">
				
				{{#spill}}
					<div class="image">
						<img src="{{images.url}}" title="{{images.post_title}}" />
						
						<span class="caption" style='color: #333;'>
							{{images.post_content}}
						</span>
					</div>
				{{/spill}}
				
				
				<div class="col-md-offset-8 {{#issued}}col-xs-12 col-sm-8 {{/issued}}col-md-4">
				
					{{#issued}}
					{{> /partials/magazine-relation}}
					{{/issued}}
					
				</div>

				
			</div>
		</div>
		
		
		<div class="row">
			<div class="col-md-12 social-row">
				<div class='social-share'>
					<i>Share this beauty</i>
					<div class="addthis_custom_sharing"></div>
				</div>
			</div>
		</div>
		
	</div>
</article>

